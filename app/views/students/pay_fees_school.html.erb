<title>Pay School Fees</title>
    
<%= render 'layouts/javascripts'%>
<%= render 'layouts/stylesheets'%>

<div class="bg-dark dk" id="wrap">
  <%= render 'students/top'%>
  <div id="left">
  <div class="media user-media bg-dark dker">
    <div class="user-media-toggleHover">
    <span class="fa fa-user"></span>
    </div>
    <div class="user-wrapper bg-dark">
      <a class="user-link" href="">
        <% if current_user.profile_image.present? %>
          <%= image_tag current_user.profile_image,class: "media-object img-thumbnail user-img",:size => "80x80" %>
        <%else%>
          <%= image_tag ("user.png"),class: "media-object img-thumbnail user-img",:size => "80x80" %>
        <%end%>
        <span class="label label-danger user-label"></span>
      </a>
      <div class="media-body">
        <h5 class="media-heading"><%= current_user.name%></h5>
        <ul class="list-unstyled user-info">
          <li><a href=""><%= current_user.role%></a></li>
          <li>Last Access : <br>
            <small><i class="fa fa-calendar"></i>&nbsp;<%= current_user.last_sign_in_at.strftime("%d %B %t at %I %M %p")%></small>
            <%= link_to "(Edit Profile)" ,edit_user_registration_path%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- #menu -->
  <ul id="menu" class="bg-blue dker">
    <li class="nav-divider"></li>  
    <li class="">
      <%= link_to students_path do%>
        <i class="fa fa-dashboard"></i><span class="link-title">&nbsp;Dashboard</span>
      <%end%>
    </li>
    <li class="active">
      <a href="javascript:;">
        <i class="fa fa-building "></i>
        <span class="link-title">Pay Fees</span>
        <span class="fa arrow"></span>
      </a>
      <ul class="collapse">
        <li>
          <%= link_to student_pay_fees_school_path(@current_user) do%>
          <i class="fa fa-angle-right"></i>&nbsp; For School<%end%>
        </li>
        <li>
          <%= link_to student_pay_fees_tutor_path(@current_user) do%>
          <i class="fa fa-angle-right"></i>&nbsp;For Tutor<%end%>
        </li>
      </ul>
    </li>
    <li class="">
      <%= link_to student_sale_book_path(@current_user) do%>
        <i class="fa fa-tasks"></i>
        <span class="link-title">Sale Book</span>
      <%end%>
    </li>
    <li class="">
      <a href="">
        <i class="fa fa-pencil"></i>
        <span class="link-title">
        Buy Book
        </span>
      </a>
    </li>
    <li class="nav-divider"></li>
  </ul>
  <!-- /#menu -->
</div>
<!-- /#left -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h4>Pay School Fees</h4>
        <hr>
        <div class="row vdiocont">   
          <%= form_for(@school_fees, url: student_pay_fees_school_path) do |f| %> 
          <form class="form-horizontal" action="">
            <div class="form-group margunrve">
              <label for="text">Name</label>
              <%=f.text_field :name, class: "form-control",placeholder: "Name",value: current_user.name %>
            </div>
            <div class="form-group margunrve">
              <label for="email">Email</label>
              <%=f.text_field :email, class: "form-control",placeholder: "email", value: current_user.email%>
            </div>
            <div class="form-group margunrve">
              <label for="text">Phone No</label>
              <%=f.text_field :phone_no, class: "form-control",placeholder: "phone_no", value: current_user.phone_no %>
            </div>
            <div class="form-group margunrve">
              <label for="text">Name Of School</label>
              <%= f.select :name_of_school, options_from_collection_for_select(@school_name, :id, :name),{}, {:class => 'form-control'}%>
            </div>
            <div class="form-group margunrve text-center">
              <%=f.submit "Submit", class: "btn btn-default"%>
              <button type="submit" class="btn btn-default">cancel</button>
            </div>
          </form>
          <%end%> 
        </div>    
        <hr>
      </div>
    <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->
