<title>Apply School</title>
<%= render "layouts/stylesheets"%>
<%= render "layouts/javascripts"%>

<style type="text/css">
  .bigbox {
    border: 1px solid;
    border-radius: 8px;
    margin-bottom: 40px;
    padding: 10px;
  }
  .img-responsive.collglogo {
    width:80px;
  }
  .col-md-12.Anxtysf {
    padding: 20px 0 2px;
    
  }
  .btn.btn-primary.TxtceNtr {
    float: right;
  }
  .paDtpZeRo {
    margin-top: 0 !important;
  } 
</style>  

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <%= render "teachers/left"%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h3>Apply School</h3>
        <hr>
        <form class="form-wrapper cf">
          <input type="text" placeholder="Location" required>
          <input type="text" placeholder="Category" required>
          <input type="text" placeholder="Sub Category" required>
          <button type="submit">Search</button>
        </form>
        <div class="col-md-12">
          <h3>Schools</h3>
          <% if @schools.present? %>
            <% @schools.each do |school|%>
              <div class="bigbox">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-2">
                      <% if school.profile_image.present?%>
                        <%= image_tag school.profile_image ,class: "img-thumbnail img-responsive collglogo"%>
                      <%else%>
                        <img src="/assets/img.jpg" class="img-thumbnail img-responsive collglogo">
                      <% end %>
                    </div>
                    <div class="col-md-10">
                      <h4><%= school.name %></h4>
                      <span> <i class="fa fa-map-marker"></i> <%= school.address%>,<%= school.city%>,<%= school.country%></span>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12 Anxtysf">
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker "></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <button class="btn btn-primary TxtceNtr">Apply Now </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <%else%>
            <div class="bigbox">
              <div class="row">
                <div class="col-md-12">
                  <div class="col-md-2">
                    <img src="/assets/img.jpg" class="img-thumbnail img-responsive collglogo">
                  </div>
                  <div class="col-md-10">
                    <h4>Indian Institute of Technology (IITB), Mumbai </h4>
                    <span> <i class="fa fa-map-marker"></i> Mumbai,Maharshtra</span>
                  </div>
                  <div class="col-md-12 col-sm-12 col-xs-12 Anxtysf">
                    <div class="col-md-3 col-sm-6 col-xs-6">
                      <i class="fa fa-map-marker "></i> <span>Avg Annual Fees</span>
                      <h6>1 lakh</h6>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                      <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                      <h6>1 lakh</h6>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                      <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                      <h6>1 lakh</h6>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                      <button class="btn btn-primary TxtceNtr">Apply Now </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        </div>
        <hr>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
    <p>2017 &copy; Tabashi Technology Private Limited</p>
</footer>
