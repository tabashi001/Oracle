<title>Find Students</title>
<%= render "layouts/stylesheets"%>
<%= render "layouts/javascripts"%>

<style type="text/css">
  .stdboard {
    background: #3a3a3a none repeat scroll 0 0;
    border: 5px solid;
    padding: 10px;
    text-align: center;
  }
  .img-responsive.stdboarspic {
    margin: 0 auto;
    width: 100px;
  }
  .colorchange {
    color: #ffffff;
    margin-bottom: 1px;
    margin-top: 5px;
  }
</style>  

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <%= render "teachers/left"%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h3>Students</h3>
        <hr>
        <form class="form-wrapper cf">
          <input type="text" placeholder="Location" required>
          <input type="text" placeholder="Category" required>
          <input type="text" placeholder="Sub Category" required>
          <button type="submit">Search</button>
        </form>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <% if @students.present?%>
              <% @students.each do |student|%>
                <div class="col-md-2">
                  <div class="stdboard">
                    <% if student.profile_image.present?%>
                        <%= image_tag student.profile_image ,class: "img-responsive stdboarspic"%>
                      <%else%>
                        <img src="/assets/content.jpg" class="img-responsive stdboarspic">
                    <% end %>
                    <h5 class="colorchange"><%= student.name%></h5>
                    <h5 class="colorchange"><%= student.phone_no%></h5>
                    <h5 class="colorchange"><%= student.qualification%></h5>
                  </div> 
                </div>
              <%end%>
            <%else%>
              <div class="col-md-2">
                 <div class="stdboard">
                    <img src="/assets/content.jpg" class="img-responsive stdboarspic">
                    <h5 class="colorchange">Balbir Kumar</h5>
                    <h5 class="colorchange">1234567890</h5>
                    <h5 class="colorchange">class :12th</h5>
                 </div> 
              </div>
            <%end%>
          </div> 
        </div> 
        <hr>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
