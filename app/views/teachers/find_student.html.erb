<title>Find Students</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= render "layouts/stylesheets"%>

<%= stylesheet_link_tag  "searchbar" %>

<style type="text/css">
  .stdboard {
    background: #3a3a3a none repeat scroll 0 0;
    border: 5px solid;
    padding: 10px;
    text-align: center;
  }
  .img-responsive.stdboarspic {
    margin: 0 auto;
    width: 100px;
  }
  .colorchange {
    color: #ffffff;
    margin-bottom: 1px;
    margin-top: 5px;
  }
</style>  

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <div id="left">
  <div class="media user-media bg-dark dker">
    <div class="user-media-toggleHover">
        <span class="fa fa-user"></span>
    </div>
    <div class="user-wrapper bg-dark">
      <a class="user-link" href="">
        <%if current_user.profile_image.present? %>
          <%= image_tag current_user.profile_image,class: "media-object img-thumbnail user-img",:size => "80x80" %>
        <%else%>
          <%= image_tag('user.gif', class: "media-object img-thumbnail user-img")%>
        <%end%>
        <span class="label label-danger user-label"><%= current_user.sign_in_count%></span>
      </a>
      <div class="media-body">
        <h5 class="media-heading"><%= current_user.name%></h5>
        <ul class="list-unstyled user-info">
          <li><%= current_user.role%></li>
          <li>Last Access : <br>
            <small><i class="fa fa-calendar"></i>&nbsp;<%= current_user.last_sign_in_at.strftime("%d %B %t at %I:%M %p")%></small>
            <%= link_to "(Edit Profile)" ,edit_user_registration_path%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- #menu -->
  <ul id="menu" class="bg-blue dker">
    <li class="nav-divider"></li>  
      <li class="">
        <%=link_to teachers_path do%>
          <i class="fa fa-dashboard"></i><span class="link-title">&nbsp;Dashboard</span>
        <%end%>
      </li>
    <li class="">
      <%=link_to teacher_schools_path(@teacher) do%>
        <i class="fa fa-tasks"></i>
        <span class="link-title">Apply School</span>
      <%end%>
    </li>
    <li class="active">
      <%=link_to teacher_find_student_path(@teacher) do%>
        <i class="fa fa-pencil"></i>
        <span class="link-title">Search Student</span>
      <%end%>
    </li>
    <li>
      <%=link_to teacher_sale_notes_path(@teacher) do%>
        <i class="fa fa-table"></i>
        <span class="link-title">Sell Notes</span>
      <%end%>
    </li>
    <li>
      <a href="">
        <i class="fa fa-font"></i>
        <span class="link-title">Total Earning</span>
      </a>
    </li>
    <li class="nav-divider"></li>
  </ul>
  <!-- /#menu -->
</div>
<!-- /#left -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h3>Students</h3>
        <hr>
         <form class="form-wrapper cf">
          <%= form_tag teacher_find_student_path(current_user), :method => 'get' do %>
            <%= select_tag "name",options_for_select(@name),prompt: "Select Student"%>
            <%= select_tag "qualification",options_for_select(@qualification),prompt: "Select Subject"%>
            <%= select_tag "city_id",options_for_select(@cities.collect{|p| [p.name, p.id]}),prompt: "Select City"%>
            <%= button_tag "Search" ,:class => "sEarch"%>
          <% end %>
      </form>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <% if @search.present?%>
              <% @search.each do |search|%>
              <a href="/users/student_show?id=<%= student.id %>" target="_blank">
                <div class="col-md-2">
                  <div class="stdboard">
                    <% if search.profile_image.present?%>
                        <%= image_tag search.profile_image ,class: "img-responsive stdboarspic"%>
                      <%else%>
                        <%= image_tag("content.jpg", class: "img-responsive stdboarspic")%>
                    <% end %>
                    <h5 class="colorchange"><%= search.name%></h5>
                    <h5 class="colorchange"><%= search.phone_no%></h5>
                    <h5 class="colorchange"><%= search.qualification%></h5>
                  </div> 
                </div>
                </a>
              <%end%>
            <%else%>
              <% if @students.present?%>
                <% @students.each do |student|%>
                <a href="/users/student_show?id=<%= student.id %>" target="_blank">
                  <div class="col-md-2">
                    <div class="stdboard">
                      <% if student.profile_image.present?%>
                          <%= image_tag student.profile_image ,class: "img-responsive stdboarspic", :size => "70x55" %>
                        <%else%>
                          <%= image_tag("content.jpg", class: "img-responsive stdboarspic")%>
                      <% end %>
                      <h5 class="colorchange"><%= student.name%></h5>
                      <h5 class="colorchange"><%= student.phone_no%></h5>
                      <h5 class="colorchange"><%= student.qualification%></h5>
                    </div> 
                  </div>
                  </a>
                <%end%>
              <%else%>
                <div class="col-md-2">
                   <div class="stdboard">
                      <%= image_tag("content.jpg", class: "img-responsive stdboarspic")%>
                      <h5 class="colorchange">Balbir Kumar</h5>
                      <h5 class="colorchange">1234567890</h5>
                      <h5 class="colorchange">class :12th</h5>
                   </div> 
                </div>
              <%end%>
            <%end%>
          </div> 
        </div> 
        <hr>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
    <p>2017 &copy; Tabashi Technology Private Limited</p>
</footer>
