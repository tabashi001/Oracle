<title>Sale Notes</title>
<%= render "layouts/stylesheets"%>
<%= render "layouts/javascripts"%>

<div class="bg-dark dk" id="wrap">
  <%= render "vendors/top"%>
  <div id="left">
 <div class="media user-media bg-dark dker">
    <div class="user-media-toggleHover">
      <span class="fa fa-user"></span>
    </div>
    <div class="user-wrapper bg-dark">
      <a class="user-link" href="">
        <%if current_user.profile_image.present? %>
          <%= image_tag current_user.profile_image,class: "media-object img-thumbnail user-img",:size => "80x80" %>
        <%else%>
           <img class="media-object img-thumbnail user-img" alt="User Picture" src="/assets/user.gif">
        <%end%>
        <span class="label label-danger user-label"><%= current_user.sign_in_count%></span>
      </a>
      <div class="media-body">
        <h5 class="media-heading"><%= current_user.name%></h5>
        <ul class="list-unstyled user-info">
          <li><%= current_user.role%></li>
          <li>Last Access : <br>
            <small><i class="fa fa-calendar"></i>&nbsp;<%= current_user.last_sign_in_at.strftime("%d %B %t at %I:%M %p")%></small>
            <%= link_to "(Edit Profile)" ,edit_user_registration_path%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- #menu -->
  <ul id="menu" class="bg-blue dker">
    <li class="nav-divider"></li>  
    <li class="">
      <a href="teacher_dashboard.html">
        <i class="fa fa-dashboard"></i><span class="link-title">&nbsp;Dashboard</span>
      </a>
    </li>
    <li class="active">
      <%=link_to vendor_schools_path(@vendor) do%>
        <i class="fa fa-tasks"></i>
        <span class="link-title">Apply School</span>
      <%end%>
    </li>
    <li>
      <a href="">
        <i class="fa fa-font"></i>
        <span class="link-title">Total Earning</span>  
      </a>
    </li>
    <li class="nav-divider"></li>
  </ul>
  <!-- /#menu -->
</div>
<!-- /#left -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h4><p><font size="3" color="blue"> Hi <%=current_user.name%>, You are applying for <%=@school.name%> </font></p></h4>
        <div class="row vdiocont">    
          <%= form_for @apply_school, url: vendor_apply_school_path do |f| %>
            <div class="form-group margunrve">
              <label for="email">Name</label>
              <%=f.text_field :name, class: "form-control",value: current_user.name %>
            </div>
            <div class="form-group margunrve">
              <label for="pwd">Email</label>
              <%=f.email_field :email, class: "form-control",value: current_user.email %>
            </div>
            <div class="form-group margunrve">
              <label for="email">Phone No</label>
              <%= f.text_field :phone_no, class: "form-control",value: current_user.phone_no%>
            </div>
            <div class="form-group margunrve">
              <label for="email">Description</label>
              <%= f.text_area :description, class: "form-control"%>
            </div>
            <div class="form-group margunrve text-center">
              <%= f.hidden_field :school_id, value: params[:vendor_id]%>
              <%= f.hidden_field :role, value: current_user.role%>
              <%=f.submit "Submit", class: "btn btn-default"%>
              <button type="submit" class="btn btn-default">Cancel</button>
            </div>
          <%end%> 
        </div>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
    <p>2017 &copy; Tabashi Technology Private Limited</p>
</footer>
