<title>Material design sign up form</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= stylesheet_link_tag  "bootstrap.min" %>
<%= stylesheet_link_tag  "font-awesome.min" %>
<%= stylesheet_link_tag  "style" %>
<%= stylesheet_link_tag  "login" %>

<%= render :partial => "layouts/header", :locals => { :active => 'SignUp' }%>

<div class="container-fluid backgrdimg">  
  <div id="login-boxone">
    <div class="row mainrowcust">
      <div class="col-sm-6 col-md-6 col-lg-6 col-xs-12 padzerosty col-sm-offset-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="left">
            <h1>Sign up</h1>
            <%= f.text_field :email, autofocus: true,placeholder: "Email" ,required: true%>
            <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "off",placeholder: "Password",required: true %><em>(<%= @minimum_password_length %> characters minimum)</em>
              <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirm Password",required: true %>   
            <% end %>
            <%= f.text_field :phone_no, autocomplete: "off",placeholder: "Phone ",required: true %>
            <div class="field">
              <% Role.all.each do |role| %>
                <%= f.radio_button :role_name,role.id%>
                <%= f.label :role_name, role.name.titleize %>
              <% end %>
              </br>
              <%= f.submit "Sign up" %>
              <p class="aldbtnsty">Already Registered??.. <%= link_to "Sign In",new_user_session_path %></p> 
            </div>
          </div>
        </div>
        <%end%>
        <% if false %>
          <div class="col-sm-6 col-md-6 col-lg-6 col-xs-12 padzerosty">
            <div class="rightone">
              <div class="scoilbtnctr">
                <%= link_to user_facebook_omniauth_authorize_path do %>
                  <button class="social-signin facebook">Sign Up with facebook</button>
                <% end %>
                <%= link_to user_twitter_omniauth_authorize_path do %>
                  <button class="social-signin twitter">Sign Up with Twitter</button>
                <% end %>
                <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                  <button class="social-signin google">Sign Up with Google+</button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer'%>

<%= javascript_include_tag "jquery.min" %>
<%= javascript_include_tag "bootstrap.min" %>
<%= javascript_include_tag "jquery.stellar" %>
<%= javascript_include_tag "jquery.appear" %>
<%= javascript_include_tag "jquery.nicescroll.min" %>
<%= javascript_include_tag "script" %>