<div id="pictures">
	<div class="container">
		<div class="row overviewBox">
			<span class="overview">Images of <%= @college.name if @college.name.present? %></span>
			<hr>
			<div class="row imgVid">
				<% if @gallery.present? %>
					<% @gallery.each do |gallery|%>
					<% @pics = gallery.school_images %>
						 		<%@pics.each do |p|%>
						<div class="col-md-3">
						  	<div class="thumbnail">
						  		<div class="caption">
									<p><%= gallery.title%></p>
							 	</div>
							 	
									<%if p.school_picture.present?%>
									  	<%= image_tag p.school_picture,size:'400x300'%>
									<%else%>
									  	<%= image_tag('building.jpg',style: "width:100%")%>
									<%end%>
							  	<div class="discrticust">
									<p><%= gallery.description.first(120) if gallery.description.present? %></p>
							 	</div>
						  	</div>
						</div>
						<%end%>
					<%end%>
				<%else%>
					<p>No Images are present.....</p>
				<%end%>
			</div>
			<span class="overview">Videos of <%= @college.name if @college.name.present?%></span>
			<hr>
			<div class="row galVid">
				<div class="col-sm-12">
					<% if @videos.present? %>
						<% @videos.each do |video| %>
							<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 ">
								<div class="vidBox">
									<iframe width="100%" height="200" src="<%= video.video%>rel=0&amp&showinfo=0&autoplay=0&controls=0"></iframe>
									<%#= video_tag video.video, width: "100%",height: "200", autoplay: true,:loop => true,muted: true%>
								</div>
							</div>
						<%end%>
					<%else%>
						<div class="col-sm-4 col-xs-12 col-md-4 ">
							<div class="img-thumbnail">
								<iframe width="100%" height="200" src="https://www.youtube.com/embed/yceDjUbDwVE?rel=0&amp;showinfo=0&autoplay=0&controls=0"></iframe>
							</div>
						</div>
						<div class="col-sm-4 col-xs-12 col-md-4 ">
							<div class="img-thumbnail">
								<iframe width="100%" height="200" src="https://www.youtube.com/embed/82zMLZt_UGc?rel=0&amp;showinfo=0&autoplay=0&controls=0"></iframe>
							</div>
						</div>
						<div class="col-sm-4 col-xs-12 col-md-4 ">
							<div class="img-thumbnail">
								<iframe width="100%" height="200" src="https://www.youtube.com/embed/0cEKR4X1kVs?rel=0&amp;showinfo=0&autoplay=0&controls=0"></iframe>
							</div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>