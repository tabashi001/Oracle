<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Post Requirements</title>
<link rel="stylesheet" href="/assets/postjob.css">
<style type="text/css">
  .Rdobox {
  padding: 0px 0px 39px;
  text-align: center;
}
</style>
  <%= render "layouts/stylesheets"%>
  <div class="bg-dark dk" id="wrap">
    <%= render "schools/top"%>
    <%= render :partial => "schools/left", :locals => { :active => 'Post' }%>
    <div id="content">
      <div class="outer">
        <div class="inner bg-light lter">
          <h4>Added Requirements</h4>
          <div class="ADDcorsen text-right">
            <%=link_to "Back",schools_path, class: "btn btn-primary"%>
            <%=link_to "Add Requirements",school_post_requirements_path(current_user), class: "btn btn-primary"%>
          </div> 
          <hr>
          <div class="Rdobox">
            <label class="radio-inline">
              <input type="radio" name="optradio" checked="true" class="trchrd">Teacher
            </label>
            <label class="radio-inline">
              <input type="radio" name="optradio" class="vdscha">vendor
            </label>
          </div>
          <div class="TChbox">
            <div class="table-responsive">          
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Qualification</th>
                    <th>Subject</th>
                    <th>Levels</th>
                    <th>Experience</th>
                    <th>Salary</th>
                    <th>Job Type</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <% @teachers_post.each do |teacher_post|%>
                  <tbody>
                    <tr>
                      <td><%=teacher_post.qualification%></td>
                      <td><%=teacher_post.subject%></td>
                       <td><%=teacher_post.level%></td>
                      <td><%=teacher_post.experience%></td>
                      <td><%=teacher_post.annual_salary%></td>
                      <td><%if teacher_post.job_type? %>Part Time
                          <%else%> Full Time <%end%>
                      </td>
                      <td>
                        <%=link_to "Edit",school_update_teacher_requirement_path(teacher_post),class: "btn btn-primary btn-xs"%>
                        <%=link_to "Delete",school_destroy_teacher_requirement_path(teacher_post),class: "btn btn-danger btn-xs", data: {confirm: "Are you sure?"}%>
                      </td>
                    </tr>
                  </tbody>
                <%end%>
              </table>
            </div>
          </div>
          <div class="vdcbox">
            <div class="table-responsive">          
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Vendor Value</th>
                    <th>Supplier Type</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <% @vendors_post.each do |vendor_post|%>
                  <tbody>
                    <tr>
                      <td><%=vendor_post.name%></td>
                      <td><%=vendor_post.location%></td>
                      <td><%=vendor_post.vendor_value%></td>
                      <td><%if vendor_post.supplier? %>One Time Supplier
                          <%else%> All Time Supplier<%end%>
                      </td>
                      <td>
                        <%=link_to "Edit",school_update_vendor_requirement_path(vendor_post),class: "btn btn-primary btn-xs"%>
                        <%=link_to "Delete",school_destroy_vendor_requirement_path(vendor_post),class: "btn btn-danger btn-xs", data: {confirm: "Are you sure?"}%>
                      </td>
                    </tr>
                  </tbody>
                <%end%>
              </table>
            </div>
          </div>
          <hr>      
        </div>
        <!-- /.inner -->
      </div>
      <!-- /.outer -->
    </div>
    <!-- /#content -->
  </div>
  <!-- /#wrap -->
