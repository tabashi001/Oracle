<script type="text/javascript">
  $(document).ready(function(){
    $(".vdcbox").hide();
      $(".trchrd").click(function(){
          $(".TChbox").show();
            $(".vdcbox").hide();
      });
      $(".vdscha").click(function(){
          $(".vdcbox").show();
           $(".TChbox").hide();
      });
  });
</script>  