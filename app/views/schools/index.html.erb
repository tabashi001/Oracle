<title>Dashboard</title>
<%= render "layouts/stylesheets"%>
<%= render "layouts/javascripts"%>

<div class="bg-dark dk" id="wrap">
  <%= render "schools/top"%>
  <%= render "schools/left"%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <div>
          <h3>Applications Received</h3>
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <div class="col-md-3 col-sm-6">
                <%= link_to  school_teachers_path(current_user) do %>
                  <div class="counting-box" id="encounter">
                    <img src="https://image.flaticon.com/icons/svg/188/188999.svg" alt="Image 1">
                    <h4 class="count-this"><%= @teachers_count %></h4>
                    <p>TEACHER</p>
                  </div>
                <%end%>
              </div>
              <div class="col-md-3 col-sm-6">
                <a href="">
                  <div class="counting-box" id="battles">
                    <img src="https://image.flaticon.com/icons/svg/189/189015.svg" alt="Image 2">
                    <h4 class="count-this">57</h4>
                    <p>STUDENTS</p>
                  </div>
                </a>
              </div>
              <div class="col-md-3 col-sm-6">
                <%= link_to  school_vendors_path(current_user) do %>
                  <div class="counting-box" id="locations">
                    <img src="https://image.flaticon.com/icons/svg/188/188935.svg" alt="Image 13">
                    <h4 class="count-this"><%=@vendors_count%></h4>
                    <p>VENDORS</p>
                  </div>
                <%end%>
              </div>
              <div class="col-md-3 col-sm-6">
                <a href="">
                  <div class="counting-box" id="locations">
                    <img src="https://image.flaticon.com/icons/svg/188/188935.svg" alt="Image 13">
                    <h4 class="count-this">312</h4>
                    <p>TOTAL EARNING</p>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
        <hr>
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <%if current_user.overviews.present?%>
                <%= link_to  school_update_overview_path(current_user) do %>
                  <div class="col-md-2 col-sm-4 col-xs-6">
                    <div class="quick-btn">
                      <i class="fa fa-bolt fa-2x"></i>
                      <span>OVERVIEW</span>
                      <span class="label label-default"></span>
                    </div>
                  </div>
                <%end%>
              <%else%>
                <%= link_to  school_overview_path(current_user) do %>
                  <div class="col-md-2 col-sm-4 col-xs-6">
                    <div class="quick-btn">
                      <i class="fa fa-bolt fa-2x"></i>
                      <span>OVERVIEW</span>
                      <span class="label label-default"></span>
                    </div>
                  </div>
                <%end%>
              <%end%>

              <%= link_to  school_courses_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-check fa-2x"></i>
                    <span>COURSES</span>
                    <span class="label label-danger"><%= @course_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_scholarships_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-building-o fa-2x"></i>
                    <span>SCHOLARSHIP</span>
                    <span class="label btn-metis-4"><%= @scholar_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_placements_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-envelope fa-2x"></i>
                    <span>PLACEMENT</span>
                    <span class="label label-success"><%= @placement_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_cutoffs_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-signal fa-2x"></i>
                    <span>CUTOFF</span>
                    <span class="label label-warning"><%= @cutoff_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_campus_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-external-link fa-2x"></i>
                    <span>CAMPUS</span>
                    <span class="label btn-metis-2"><%= @campus_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_schoolinformations_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-lemon-o fa-2x"></i>
                    <span>NEWS</span>
                    <span class="label btn-metis-4"><%= @news_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_schoolpictures_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-glass fa-2x"></i>
                    <span>PICTURES</span>
                    <span class="label btn-metis-3"><%= @picture_count %></span>
                  </div>
                </div>
              <%end%>

              <%= link_to  school_schoolvideos_path(current_user) do %>
                <div class="col-md-2 col-sm-4 col-xs-6">
                  <div class="quick-btn">
                    <i class="fa fa-glass fa-2x"></i>
                    <span>VIDEOS</span>
                    <span class="label btn-metis-3"><%= @video_count %></span>
                  </div>
                </div>
              <%end%>

            </div>
          </div>
        <hr>
      </div>
    </div>
  </div>
</div>

<footer class="Footer bg-dark dker">
    <p>2017 &copy; Tabashi Technology Private Limited</p>
</footer>

