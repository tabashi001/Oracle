<title>Admin Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= render "layouts/stylesheets"%>

<div class="bg-dark dk" id="wrap">
	<%= render "admins/top"%>
  <%= render :partial => "admins/left", :locals => { :active => 'Students' }%>
    <div id="content">
        <div class="outer">
            <div class="inner bg-light lter">
      			<div>
      				<h3>STUDENTS</h3>
				    <div class="table-responsive">          
                        <table class="table table-bordered">
                            <thead>
                              <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Status</th>
                              </tr>
                            </thead>
                            <% @students.each do |student|%>
                                <tbody>
                                  <tr>
                                    <td><%=student.id%></td>
                                    <td><%=student.name%></td>
                                    <td><%=student.email%></td>
                                    <td><%=student.phone_no%></td>
                                    <td>
                                     <%=link_to "Edit",admin_school_update_path(student.id),class: "btn btn-primary btn-xs"%>
                                        <% if student.active? %> <%=link_to "Delete",admin_activate_path(student.id), method: :post, data: { confirm: "Do you want to Deactivate Student Profile?" }, class: "btn btn-danger btn-xs"%>
                                        <%else%>
                                            <%=link_to "Active",admin_activate_path(student.id), method: :post, data: { confirm: "Do you want to Activate Student Profile?" }, class: "btn btn-success btn-xs"%>
                                        <% end %>
                                    </td>
                                  </tr>
                                </tbody>
                            <%end%>
                        </table>
                    </div>
    			</div>
				<hr>
            </div>
            <!-- /.inner -->
        </div>
        <!-- /.outer -->
    </div>
    <!-- /#content -->
</div>
