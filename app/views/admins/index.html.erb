                          <p>TEACHERS</p>
                      </div>
                      <%end%>
                  </div>
                  <div class="col-md-3 col-sm-6">
                      <%= link_to admin_students_path(current_admin) do%>
                      <div class="counting-box" id="locations">
                         <%= image_tag ('slogo.png')%>
                         <h4 class="count-this"><%= @students_count%></h4>
                         <p>STUDENTS</p>
                     </div>
                     <%end%>
                 </div>
                 <div class="col-md-3 col-sm-6">
                  <%= link_to admin_vendors_path(current_admin) do%>
                  <div class="counting-box" id="locations">
                      <%= image_tag ('vlogo.png')%>
                      <h4 class="count-this"><%= @vendors_count%></h4>
                      <p>VENDORS</p>
                  </div>
                  <%end%>
              </div>
          </div>
      </div>
  </div>
  <hr>
</div>
